  <!-- Page -->
  <div class="page animsition" data-animsition-in="fade-in" data-animsition-out="fade-out">
    <div class="page-content">
      <div class="page-brand-info">
        <div class="brand">
          <img class="brand-img" src="/images/img_logo_200.png" alt="...">
          <h2 class="brand-text font-size-40"></h2>
        </div>
        <p class="font-size-20">A raffle often involves several different possible prizes that can be won, 
            and a ticket will be drawn from the group at random for each of the prizes.</p>
      </div>
      <div class="page-login-main">
        <div class="brand visible-xs">
          <img class="brand-img" src="/images/img_logo_200.png" alt="...">
          <h3 class="brand-text font-size-40"></h3>
        </div>
        <h3 class="font-size-24">Sign In</h3>
        <p>Please sign in to your admin account of Raffler.</p>
        <form method="post" action="/sign" autocomplete="off" id="frm_signin">
          <div class="form-group form-material floating">
            <input type="email" class="form-control empty" id="inputEmail" name="email">
            <label class="floating-label" for="inputEmail">Email</label>
          </div>
          <div class="form-group form-material floating">
            <input type="password" class="form-control empty" id="inputPassword" name="password" data-fv-stringlength="true"
                        data-fv-stringlength-min="6" data-fv-notempty-message="Password should not be empty."
                        data-fv-stringlength-message="Password should not be less than 6 letters.">
            <label class="floating-label" for="inputPassword">Password</label>
          </div>
          <div class="form-group clearfix">
            <div class="checkbox-custom checkbox-inline checkbox-primary pull-left">
              <input type="checkbox" id="remember" name="checkbox">
              <label for="inputCheckbox">Remember me</label>
            </div>
            <a class="pull-right" href="forgot-password.html">Forgot password?</a>
          </div>
          <button type="submit" class="btn btn-primary btn-block" id="btn_signin">Sign in</button>
        </form>
        <p>No account? <a href="/signup">Sign Up</a></p>
        <footer class="page-copyright">
          <p>WEBSITE BY Raffler LLC</p>
